#!/usr/bin/perl -w

use strict;
use Time::Local;

my $date="";
my $cookie;

while (my $line = <STDIN>) {
  if ($line =~ /Date: (.*)/) { $date = $1; }
  if ($line =~ /Set-Cookie: (\S+)=(\S+);/) { 
    print date_to_sec($date),":$1:$2\n"; 
#    print $date,":$1:$2\n"; 
  }
}

sub date_to_sec {
  my $date = shift;
  my %months = ( 
    Jan => 0, Feb => 1, Mar => 2, Apr => 3, May => 4, Jun =>5,
    Jul => 6, Aug => 7, Sep => 8, Oct => 9, Nov => 10, Dec =>11,
  );

  my (undef, $dom, $month, $year, $time, undef) = split(" ",$date);
  $month=$months{$month};

  my ($hour, $min, $sec) = split(":",$time);

  return timegm($sec, $min, $hour, $dom, $month, $year);
}
